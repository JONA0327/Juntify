APP_NAME=Juntify
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000
FRONTEND_URL=http://127.0.0.1:3000

# Logging visible para desarrollo
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# --- BASE DE DATOS LOCAL ---
# Ajusta DB_USERNAME y DB_PASSWORD según tu configuración
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=juntify_new
DB_USERNAME=root
DB_PASSWORD=

# --- PANELES (OPCIONAL) ---
PANELS_DB_HOST=127.0.0.1
PANELS_DB_PORT=3306
PANELS_DB_DATABASE=Juntify_Panels
PANELS_DB_USERNAME=root
PANELS_DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local

QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# --- CORREO ---
# Configura tu proveedor SMTP
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=465
MAIL_USERNAME=tu-email@example.com
MAIL_PASSWORD=tu-password-email
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS="tu-email@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# --- PYTHON ENVIRONMENT ---
# Windows: C:/ruta/completa/al/proyecto/python_env/Scripts/python.exe
# Linux: /ruta/completa/al/proyecto/python_env/bin/python
PYTHON_BIN=

# --- HERRAMIENTAS EXTERNAS ---
# Windows: usar nombres de comando si están en PATH
# Linux: usar rutas completas como /usr/bin/ffmpeg
FFMPEG_BIN=ffmpeg
FFPROBE_BIN=ffprobe
TESSERACT_PATH=tesseract
PDFTOTEXT_PATH=pdftotext
PDFTOPPM_PATH=pdftoppm
GHOSTSCRIPT_PATH=gswin64c

# --- AUDIO & MEDIA ---
SKIP_COEP_IN_DEV=true
AUDIO_FORCE_OGG=true
AUDIO_OPUS_BITRATE=96k
AUDIO_CONVERSION_TIMEOUT=600
AUDIO_USE_PYTHON=false
AUDIO_CHUNKED_PROCESSING=sync
AUDIO_MAX_SIZE_MB=500
AUDIO_BACKGROUND_PROCESSING=false

# --- GOOGLE AUTH ---
# Obtener desde Google Cloud Console
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://127.0.0.1:8000/auth/google/callback

# --- API KEYS ---
ASSEMBLYAI_API_KEY=
ASSEMBLYAI_VERIFY_SSL=false
OPENAI_API_KEY=
GOOGLE_API_KEY=
# Ruta completa al archivo JSON de credenciales de Google Service Account
GOOGLE_APPLICATION_CREDENTIALS=

# --- MERCADO PAGO ---
MERCADO_PAGO_ACCESS_TOKEN=
MERCADO_PAGO_PUBLIC_KEY=
MERCADO_PAGO_WEBHOOK_SECRET=
MERCADO_PAGO_NOTIFICATION_URL=http://127.0.0.1:8000/
MERCADO_PAGO_BYPASS_MODE=true
MERCADO_PAGO_SIMULATE_SUCCESS=true
MERCADO_PAGO_INTEGRATOR_ID=
MERCADO_PAGO_WEBHOOK_SECRET=
MERCADO_PAGO_NOTIFICATION_URL=
